<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="manageSlotItem" minHeight="90.0" minWidth="251.0" onMouseEntered="#onMouseEntered"
   prefHeight="90.0" prefWidth="251.0"
   style="-fx-background-color: white; -fx-background-radius: 10;"
   xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.consultify.controller.ManageSlotsItemController">
   <children>
      <HBox alignment="BOTTOM_RIGHT">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="66.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Text fx:id="timeText" strokeType="OUTSIDE" strokeWidth="0.0"
                     text="Time:    8:30am to 10:30am">
                     <VBox.margin>
                        <Insets left="10.0" top="5.0" />
                     </VBox.margin>
                  </Text>
                  <Text fx:id="dateText" strokeType="OUTSIDE" strokeWidth="0.0"
                     text="Date: 22/12/2024">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Text>
                  <Text fx:id="venueText" strokeType="OUTSIDE" strokeWidth="0.0"
                     text="Venue:   B-07-08">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Text>
               </children>
            </VBox>

            <!-- Button Section with Red Color and Clickable Style -->
            <Button fx:id="cancelSlotButton" mnemonicParsing="false"
               style="-fx-background-color: #e14f3e; 
              -fx-text-fill: white; 
              -fx-font-size: 16px; 
              -fx-padding: 5px 15px; 
              -fx-background-radius: 10; 
              -fx-border-radius: 10; 
              -fx-border-width: 0px;"
               text="X" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</VBox>
